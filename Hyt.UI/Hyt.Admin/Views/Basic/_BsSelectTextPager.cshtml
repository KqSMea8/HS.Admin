@using Hyt.Infrastructure.Pager
@model PagedList<Hyt.Model.BsCode>

<!--表格列开始-->
<div class="boxs_listtabel">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone">
        <thead>
            <tr>
                <th>文本内容</th>
                <th width="90">操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                var mode = Model.TData as List<Hyt.Model.BsCode>;
                if (mode != null && mode.Count > 0)
                {
                    foreach (var item in (List<Hyt.Model.BsCode>)Model.TData)
                    {
                        if (i % 2 == 0)
                        {
                            @Html.Raw("<tr>")
                        }else{
                            @Html.Raw("<tr class='stag_color'>")
                        }
                        <td  class="align_l p10_lr">@item.CodeName</td>
                        <td>
                            <button class="btn btn_ht26" onclick="doSelect({id:@item.SysNo, title:'@item.CodeName'});"><span class="icon_changeGoods"></span><span class="m5_l">选择</span></button>
                        </td>
                        @Html.Raw("</tr>")
                        i++;
                    }
                }
                else
                {
                    <tr><td colspan="7" class="align_l p10_l bgr_eb">暂无数据</td></tr>
                }
                
            }
        </tbody>
    </table>
</div>
<!--表格列结束-->

