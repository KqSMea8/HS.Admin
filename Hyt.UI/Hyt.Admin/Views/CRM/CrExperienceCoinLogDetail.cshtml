@using Hyt.Model.WorkflowStatus
@using Hyt.Util
@model Hyt.Model.CBCrExperienceCoinLog
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "客户惠源币变更详情";
}
@section headjs{
    <script type="text/javascript" src="~/Theme/scripts/UI.yui.js"></script>
    <script type="text/javascript" src="~/Theme/scripts/jquery.validate.min.js"></script>

}

<form id="crExperienceCoinLogDetailForm" name="crExperienceCoinLogDetailForm" action="CrExperienceCoinLogDetail">
    <div class="caseout">
        <div class="boxs_detail_dispay">
            <div class="tit_con">
                <table width="100%" cellspacing="0" cellpadding="0" border="0">
                    <tbody>
                        <tr>
                            <td width="70" class="nameright border_rnone">客户帐号:</td>
                            <td class="border_right" colspan="3">@Model.CustomerAccount</td>
                        </tr>
                        <tr>
                            @{
                                if (Model.Increased == 0)
                                {
                                <td width="70" class="nameright border_rnone">减少惠源币:</td>
                                <td class="border_right border_rnone">@Model.Decreased</td>
                                }
                                else
                                {
                                <td width="70" class="nameright border_rnone">增加惠源币:</td>
                                <td class="border_right border_rnone">@Model.Increased</td>
                                }
                            }
                            <td width="70" class="nameright border_rnone">剩余惠源币:</td>
                            <td class="border_right border_rnone">@Model.Surplus</td>
                        </tr>
                        <tr>
                            <td width="70" class="nameright border_rnone">变更类型:</td>
                            <td class="border_right border_rnone" colspan="3">@EnumUtil.GetDescription(typeof(CustomerStatus.惠源币变更类型), Model.ChangeType)</td>
                        </tr>
                        <tr>
                            <td width="70" class="nameright border_rnone">变更人:</td>
                            <td class="border_right border_rnone">@Model.CreatedByName</td>
                            <td width="70" class="nameright border_rnone">变更时间:</td>
                            <td class="border_right border_rnone">@Model.ChangeDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                        <tr>
                            <td width="70" class="nameright border_rnone">变更描述:</td>
                            <td class="border_right" colspan="3">
                                <textarea id="txtChangeDescription" class="input_xlarge" disabled="disabled" rows="2" name="txtChangeDescription" cols="20" style="width: 238px; height: 50px;">
@Model.ChangeDescription
</textarea>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
