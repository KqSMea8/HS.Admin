<form id="formImport" action="@Url.Action("ImportExcel")" method="POST" enctype="multipart/form-data">
    <!-- upload with excel format -->
    <input type="file" id="txtUpload" name="txtUpload" class="hide" accept=".csv,application/vnd.ms-excel" />
    @*<input type="file" id="txtUpload" name="txtUpload" class="hide" accept=".csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel" />*@
</form>

<script>

    $(document).ready(function() {

        
        $('#txtUpload').change(function () {
            //must to do the submit (not ajax) to post the data(uploaded file)
            formImport.submit();

        });    

        //not (undefined/''/null)
        if ('@ViewBag.result') {
            //window.parent.getResult(txt);
                        @*UI.Alert({ content: '@ViewBag.result' });//default is warning*@
            window.parent.importCallBack('@ViewBag.result');
        }

    });

    function chooseFile() {
        $("#txtUpload").click();
    }

</script>
