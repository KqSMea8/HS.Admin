@using Hyt.Infrastructure.Pager
@using Hyt.Model
@using Hyt.Util
@model PagedList<CBPdTemplate>

<table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_rnone">
    <thead>
        <tr>
            <th>名称</th>
            @*<th style="width: 98px">模板图标</th>*@
            <th>备注</th>
            <th style="width: 85px">创建人</th>
            <th style="width: 85px">最后更新人</th>
            <th style="width: 79px" class="borde_r_none">操作</th>
        </tr>
    </thead>
    <tbody class="list_con" width="100%" border="0" cellspacing="0" cellpadding="0">
        @{
            if (Model.TotalItemCount > 0)
            {
                int row = 1;
                string cs = string.Empty;
                foreach (var item in Model.TData)
                {
                    if (row % 2 == 0)
                    {
                        cs = "stag_color";
                    }
                    else
                    {
                        cs = string.Empty;
                    }
            <tr class="@cs">
                <td class="align_l p10_l">@item.Name</td>
               @* <td>@item.Icon</td>*@
                <td class="align_l p10_l">@item.Remark</td>
                <td>@item.CreatedByName</td>
                <td>@item.LastUpdateByName</td>
                <td>
                    <button type="button" class="btn btn_ht26" title="选择" onclick="selectPdTemplate(@item.SysNo,'@item.Name','@item.Content')"><span class="icon_ok"></span><span class="m5_l">选择</span></button>
                </td>
            </tr>
                    row++;
                }
            }
            else
            {
            <tr class="odd_color">
                <td class="align_l p10_l bgr_eb" colspan="6">暂无数据</td>
            </tr>
            }

        }
    </tbody>
</table>
@{Html.RenderPartial("_UrlPaging", Model); }
