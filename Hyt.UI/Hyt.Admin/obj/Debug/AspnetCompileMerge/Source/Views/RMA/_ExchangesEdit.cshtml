                        <td class="nameright">联系人电话</td>
                        <td>
                            <input type="text" class="input_xlarge" name="ReceivePhoneNumber"  maxlength="15"  id="ReceivePhoneNumber" Receive="PhoneNumber" value="@if (Model.SoReceiveAddress != null)
