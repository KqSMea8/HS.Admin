                if (window.frames["ifrmImport"].chooseFile) {
                    window.frames["ifrmImport"].chooseFile();
                }
            });
        });

        function maskStart() {

            Utils.MaskStart($('.case'));
        }

        function maskStop() {
            Utils.MaskStop();
        }

        //导入excel回调方法
        function importCallBack(res) {
            res = JSON.parse(res);
            if (res.Status) {//成功
                UI.tips.tip_alert("tips_success", res.Message);
                var jsonstr = "[";
                for (var i = 0; i < res.Data.length; i++) {
                    // alert(res.Data[i].采购单价)
                    jsonstr += "{";
                    jsonstr += "\"xuhao\":\"" + (i + 1) + "\",";
                    jsonstr += "\"name\":\"" + res.listModel[i].EasName + "\",";
                    jsonstr += "\"pid\":\"" + res.listModel[i].SysNo + "\",";
                    jsonstr += "\"erp\":\"" + res.listModel[i].ErpCode + "\",";
                    jsonstr += "\"price\": [";
                    jsonstr += "{\"leave\": " + res.Data[i].采购数量 + ",\"price\": " + res.Data[i].采购单价 + "}";
                    jsonstr += "],";
                    jsonstr += "\"baseprice\": " + res.Data[i].采购单价 + ",";
                    jsonstr += "\"courier\":0,";
                    jsonstr += "\"attributes\":\"" + res.Data[i].备注 + "\"";
                    jsonstr += "}";
                    if (res.Data.length - 1 > i) {
                        jsonstr += ",";
                    }
                }
                jsonstr += "]";
                //alert(jsonstr);
                jsonstr = JSON.parse(jsonstr);
                PagerOperation.createTableAndSaveData(jsonstr);
                PagerOperation.InitializeEvent();
                PagerOperation.showTotalPrice();
            } else {//失败
                UI.tips.tip_alert("tips_wrong", res.Message);
            }
        }
    </script>

