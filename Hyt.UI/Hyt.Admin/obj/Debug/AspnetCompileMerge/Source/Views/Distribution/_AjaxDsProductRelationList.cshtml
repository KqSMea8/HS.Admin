
@using Hyt.Infrastructure.Pager
@using Hyt.Model.Transfer
@model PagedList<CBDsProductRelation>


<div class="boxs_listtabel">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone">
        <thead>
            <tr>
                <th class="p10_lr" style="display:none">系统编号</th>
                <th class="align_l p10_lr">店铺名称</th>
                <th class="align_c p10_lr">商城商品编码</th>
                <th class="align_l p10_lr">Eas名称</th>
                <th class="align_l p10_lr">商城商品属性</th>
                <th class="align_c p10_lr">商品编号</th>
                <th width="80">操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                var list = Model.TData as List<CBDsProductRelation>;
                if (list == null || list.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="align_l p10_l bgr_eb">暂无数据。</td>
                    </tr>
                }
                else
                {
                    var i = 1;
                    foreach (var item in list)
                    {
                        <tr @if (i % 2 == 0) { @: class="stag_color"
                            }>
                            <td style="display:none">@item.SysNo</td>
                            <td class="align_l p10_lr">@item.ShopName</td>
                            <td class="align_c p10_lr">@item.MallProductId</td>
                            <td class="align_l p10_lr">@item.EasName</td>
                            <td class="align_l p10_lr">@item.MallProductAttr</td>
                            <td class="align_c p10_lr">@item.ErpCode</td>
                            <td class="p10_lr">
                                <button class="btn btn_red btn_ht26" onclick="Delete(@item.SysNo)"><span class="icon_trash icon_white"></span><span class="m5_l">删除</span></button>
                            </td>
                        </tr>
                        i++;
                    }
                }
            }

        </tbody>
    </table>
</div>
@{Html.RenderPartial("_UrlPaging", Model); }
