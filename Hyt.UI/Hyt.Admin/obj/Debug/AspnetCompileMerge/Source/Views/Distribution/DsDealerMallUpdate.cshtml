                        <tr>
                            <td class="nameright border_rnone">APPKEY</td>
                            <td>
                                <select class="select_ht28 " id="DealerAppSysNo" name="DealerAppSysNo"></select>
                            </td>
                        </tr>
                        <tr>
                            <td class="nameright border_rnone"><span class="v_star">*</span>店铺名称</td>
                            <td>
                                <input type="text" value="@Model.ShopName" id="ShopName" name="ShopName" maxlength="50" class="wd156">
                                <span id="forShopName" class="prompt m10_l">字数限制,1-50个字</span>

                            </td>
                        </tr>
                        <tr>
                            <td class="nameright border_rnone"><span class="v_star">*</span>店铺账号</td>
                            <td>
                                <input type="text" value="@Model.ShopAccount" id="ShopAccount" name="ShopAccount" maxlength="50" class="wd156">
