<script>
    var shopid = "@(Model.SysNo)";
    $(".getShouquanma").click(function () {       
        var shopType = $("#MallTypeSysNo").val();
        var appSysNo = $("#DealerAppSysNo").val();
   
        $.ajax({
            url: "/Distribution/GetAuthorizationCode",
            data: { shopid: shopid, shopType: shopType, appSysNo: appSysNo },
            type: "post",
            dataType:"json",
            success: function (data) {
              
                if (data.Status && data.Data != "") {                  
                    //alert(data.Data);
                    UI.DialogOpen(data.Data,
                    {
                        title: '获取授权码',
                        width: 1200,
                        height: 800,
                        close: function () {},
                        resize: false
                    },
                    false);
             
                } else {
                    alert(data.Message);
                }
            }
        })
    });

</script>
@section FooterJs{
    <script type="text/javascript">
        $(function() {
            $("#MallTypeSysNo").change(function() {
                GetAppListByMallType($(this).val());
            });
            $("#status").find("option[value=@Model.Status]").attr("selected", "true");
            $("#IsSelfSupport").find("option[value=@Model.IsSelfSupport]").attr("selected", "true");
            $("#DealerSysNo").find("option[value=@Model.DealerSysNo]").attr("selected", "true");
            $("#MallTypeSysNo").find("option[value=@Model.MallTypeSysNo]").attr("selected", "true");
            GetAppListByMallType($("#MallTypeSysNo").val());
        });

        function GetAppListByMallType(mallType) {
            $.getJSON("/Distribution/GetListByMallType?r=" + Math.random(),
                {
                    mallType: $("#MallTypeSysNo").val()
                }, function(rows) {
                    var content = '<option value="0">请选择</option>';
                    $.each(rows, function(idx, item) {
                        content += "<option value='" + item.Value + "'>" + item.Text + "</option>";
                    });
                    $('#DealerAppSysNo').html(content);
                    $("#DealerAppSysNo").find("option[value=@Model.DealerAppSysNo]").attr("selected", "true");
                });
