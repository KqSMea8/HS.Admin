@model IList<Hyt.Model.DsMallType>
<!--/表格列表区-->
<table id="item_list" width="100%" border="0" cellspacing="0" cellpadding="0" class="border_rnone">
    <thead>
        <tr>
            <th width="98">编号</th>
            <th width="98">商城类型代号</th>
            <th class="align_l p10_lr">商城类型名称</th>
            <th width="111">是否使用预存款</th>
            <th width="46">状态</th>
            <th width="148">操作</th>
        </tr>
    </thead>

    <tbody>
        @if (null != Model && Model.Count > 0)
        {

            foreach (Hyt.Model.DsMallType item in Model)
            {
            <tr>
                <td>@item.SysNo  </td>
                <td>@item.MallCode  </td>
                <td class="align_l p10_lr">@item.MallName</td>
                <td>@((Hyt.Model.WorkflowStatus.DistributionStatus.商城是否使用预存款)item.IsPreDeposit)</td>
                <td id="status@(item.SysNo)">@((Hyt.Model.WorkflowStatus.DistributionStatus.分销商等级状态)item.Status)
                </td>

                <td>
                    <button id="btnStatus@(item.SysNo)" class="btn btn_ht26 DS1004701" type="button" onclick="SetReverseStatus(@item.SysNo) ">
                        @if (item.Status == (int)Hyt.Model.WorkflowStatus.DistributionStatus.分销商状态.禁用)
                        {
                            <span class="icon_check m5_r "></span><span>启用</span>                               
                        }
                        else
                        {
                            <span class="icon_ban_circle m5_r "></span><span>禁用</span>
                        }
                    </button>
                    <button class="btn btn_ht26 m10_l DS1004301" onclick="Update(@item.SysNo)" title="修改"><span class="icon_pencil"></span><span class="m5_l">修改</span></button>
                </td>
            </tr>                      
                   
            }

        }
        else
        {
            <tr class="odd_color">
                <td class="align_l p10_l bgr_eb" colspan="10">暂无数据</td>
            </tr>
        }
    </tbody>
</table>
<div id="pagination" class="pagination clearfix ">
    <b class="fl">
        <span class="f12 c6 bold4">共</span>
        <span class=" m5_r m5_l f12 c3">1</span>
        <span class="f12 c6 bold4">页</span><span class="f12 c6 m5_r m5_l bold4">|</span>
        <span class="f12 c6 bold4">每页显示</span>
        <span class=" m5_r m5_l f12 c3">100</span>
        <span class="f12 c6 m5_l bold4">条</span>
    </b>

</div>


<script>
    //隔行样式
    DAO.InterlineStyle();

</script>
