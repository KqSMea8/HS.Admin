    /*仓库菜单树*/
    function doSearch(val) {
        $.ajax({
            url: "@Url.Action("GetWharehouseSelector", "Warehouse")",
            dataType: "json",
            data: {},
            async: false,
            success: function (result) {
                showTree(result);
                zTreeObj.expandAll(true);  //展开所有节点
            },
            error: function () {
                // mask.Remove();
            }
        });
    }

    var zTreeObj;
    function showTree(result) {
        var radioType;
        var setting = {
            data: {
                simpleData: {
                    enable: true,
                    idKey: "id",
                    pIdKey: "pId"
                }
            },
            check: {
                enable: true,
                chkStyle: "checkbox",
                radioType: radioType
            }
        };
        zTreeObj = UI.ZTree.init($("#areatree"), setting, result);
    }

    /*仓库菜单树结束*/


    /*商品分类菜单树*/
    var zTreeObjTo;
    function doSearchTo(val) {
        $.ajax({
            url: '@Url.Action("GetProductCategoryZTreeList", "Ajax")',
            dataType: "json",
            data: { all: true },
            async: false,
            success: function (result) {
                showTreeTo(result);
                zTreeObjTo.expandAll(true);  //展开所有节点
            },
            error: function () {
                // mask.Remove();
            }
        });
    }
    function showTreeTo(result) {
        var radioType;
        var setting = {
            data: {
                simpleData: {
                    enable: true,
                    idKey: "id",
                    pIdKey: "pId"
                }
            },
            check: {
                enable: true,
                chkStyle: "checkbox",
                radioType: radioType
            }
        };
        zTreeObjTo = UI.ZTree.init($("#productCatetoryTree"), setting, result);
    }
    /*商品分类菜单树结束*/
</script>

