@{
    ViewBag.Title = "GetDsMembershioLevelList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="case">
    <div class="boxs">
        <div class="boxs_tit head_m">
            <h3>门店会员等级管理</h3>
        </div>
        <div class="boxs_con_c1">
            <div class="boxs_tool">
                <!--功能按钮开始-->
                <div class="left_tool">
                    <button type="button" style="display:@(ViewBag.dsSysNo==0?"":"none")" id="btnAdd" title="添加" class="btn btn_ht26 m10_r btn_blue" onclick="AddPosManageControl()"><span class="icon_importing icon_white m5_r"></span><span>添加</span></button>
                </div>
            </div>
            <div id="paging" class="boxs_listtabel">
                <table id="item_list" width="100%" border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th class="align_l p10_lr">编号</th>
                            <th>等级名称</th>
                            <th>折扣值</th>
                            <th width="122">积分转金额比例</th>
                            <th width="122">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.dsList != null && (ViewBag.dsList as List<Hyt.Model.Pos.DsMembershioLevel>).Count > 0)
                        {
                            foreach (var item in (ViewBag.dsList as List<Hyt.Model.Pos.DsMembershioLevel>))
                            {
                                <tr>
                                    <td class="border_lnone wd75">@item.SysNo</td>
                                    <td class="align_l p10_lr">@item.LevelName</td>
                                    <td>@item.Privilege</td>
                                    <td>@item.PointToFen</td>
                                    <td>
                                        <button style="display:@(ViewBag.dsSysNo==0?"":"none")" type="button" id="btnAdd" title="修改" class="btn btn_ht26 m10_r btn_blue" onclick="AddPosManageControl(@item.SysNo)">
                                            <span class="icon_importing icon_white m5_r"></span>
                                            <span>修改</span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="align_l p10_l bgr_eb">暂无数据</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
<script type="text/javascript">
    function AddPosManageControl(id)
    {
        // var myDialog = art.dialog();// 初始化一个带有loading图标的空对话框
        if (id != null)
        {
            window.location.href = "/DsPosManage/InserOrUpdateDsMembershipLevel?SysNo=" + id + "&dsSysNo=@ViewBag.dsSysNo";
        }
        else
        {
            window.location.href = "/DsPosManage/InserOrUpdateDsMembershipLevel?dsSysNo=@ViewBag.dsSysNo";
        }
    }
</script>
