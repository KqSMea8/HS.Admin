<script type="text/javascript">

    var data = [{
        SysNo: 100001,
        Name: '基本属性',
        BackEndName: 'IPhone外壳基础属性基础属性',
    }, {
        SysNo: 100002,
        Name: '技术参数',
        BackEndName: 'IPhone外壳技术参数',
