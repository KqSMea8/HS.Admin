    }, {
        SysNo: 100005,
        Name: '基本属性',
        BackEndName: '电霸4代',
    }]


    //调用页面进行回调
    function CallBack(parentWindow) {
        if ($.isFunction(parentWindow._ActiveSelectAttributeGroupCallBack)) {

            //读取值
            var selectTrItems = checkboxSelector.GetCheckboxSelectedItem();
            var result = new Array();
            for (var i = 0; i < selectTrItems.length; i++) {
                for (var n = 0; n < data.length; n++) {
                    if (data[n].SysNo == parseInt(selectTrItems[i].attr("key"))) {
                        result.push(data[n]);
                        break;
                    }
                }
            }

            parentWindow._ActiveSelectAttributeGroupCallBack(result);
        }
        UI.Dialog.close();
    }

    var checkboxSelector = null;
    $(function () {
        checkboxSelector = UI.CheckAllbox("#attributeGroupTalbe", ".checkall");
    });

</script>