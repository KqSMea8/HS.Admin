<script src="~/Theme/scripts/jquery.min.js"></script>
<script type="text/javascript">

    function SynchronizeToErp(obj) {

        var ids = new Array();
        $('input.checktd').each(function () {
            if ($(this).attr("checked")) {
                var mSysNo = $(this).val();
                ids.push(mSysNo);
            }
        });

        if (ids.length == 0) {
            Utils.alert("请先选择Kis单据！");
            return false;
        }

        $(obj).attr("disabled", "disabled").addClass("disabled").find("span").next().html("等待");

        Ajax.postJosn("/ajax/SynchronizeToLiJiaErp", "", function (p) {
            p.setParams("r", Math.random());
            p.setParams("sysNos", ids);
        }, function (data) {
            UI.Alert({ content: data.Message });
            $(obj).removeAttr("disabled").removeClass("disabled").find("span").next().html("批量同步");
            doSearch($("#pageIndex").val());
        });
    }
    function SynchronizeOrder100ToMall(obj) {
        $(obj).attr("disabled", "disabled").addClass("disabled").find("span").next().html("等待");
        Ajax.get("/ajax/SynchronizeOrder100ToMall", "", function (p) {
            p.setParams("r", Math.random());
        }, function (data) {
            UI.Alert({ content: data.Message });
            $(obj).removeAttr("disabled").removeClass("disabled").find("span").next().html("同步订单100");
        });
    }
    //海带订单同步
    function SynchronizeOrderHaiDaiToMall(obj) {

        $(obj).attr("disabled", "disabled").addClass("disabled").find("span").next().html("等待");
        Ajax.get("/ajax/SynchronizeOrderHaiDaiToMall", "", function (p) {
            p.setParams("r", Math.random());
        }, function (data) {
            UI.Alert({ content: data.Message });
            $(obj).removeAttr("disabled").removeClass("disabled").find("span").next().html("同步海带订单");
        });
    }
    $(document).ready(function (e) {
        UI.searchbox($("#outbtn2"), "#JS_search", $("#JS_search_nav"), $("#JS_delete"));

        //作废
        $("#invalidBtn").click(function () {
            var ids = new Array();
            $('input.checktd').each(function () {
                if ($(this).attr("checked")) {
                    var mSysNo = $(this).val();
                    ids.push(mSysNo);
                }
            });
            if (ids.length == 0) {
                Utils.alert("请先选择Kis单据！");
                return false;
            }
            UI.DialogBox({
                width: 300,
                height: 120,
                title: "作废原因",
                content: '<textarea id="txtInvalidRLiJiaons" style="width: 280px; height: 100px; word-break: break-all; word-wrap: break-word;"></textarea>',
                padding: '10px',
                button: [{
                    name: '保存',
                    callback: function () {
                        var remarks = parent.$("#txtInvalidRLiJiaons").val();
                        Ajax.postJosn("/Sys/BatchInvalidLiJia", "", function (p) {
                            p.setParams("sysNos", ids);
                            p.setParams("remarks", remarks);
                            p.setParams("r", Math.random());
                        }, function (data) {
                            //UI.Alert({ content: data.Message });
                            UI.tips.tip_alert('tips_shrot tips_success', data.Message);
                            //if (data.Status)
                            doSearch($("#pageIndex").val());
                        });
                    }
                }, { name: '取消' }
                ]
            });
            return false;
        });
    });

    function Open(id) {
        UI.OpenCreatTab('Kis日志编号:' + id, '/Sys/LiJiaDetailList/?sysNo=' + id);
    }
    $(document).ready(function () {
        doSearch(1);
        //绑定按钮查询事件
        $("#searchBtn").click(function () {
            doSearch(1);
            return false;
        });
    });

    //查询列表
    function doSearch(pageIndex) {
        Ajax.get("/Sys/DoLiJiaSyncLogQuery", "search", function (p) {
            //p.setParams("HandleDepartment",20);
            p.setParams("id", pageIndex);
        }, function (data) {
            $('#paging').empty();
            $('#paging').html(data);
        });
    }
    //查询条件变化时执行
    $("#StatusType").change(function () {
        //doSearch();
    });
    //LiJia重新同步
    function LiJiaSyn(sysNo,obj) {
        $(obj).attr("disabled", "disabled").addClass("disabled").find("span").next().html("等待");
        Ajax.get("/Sys/LiJiaSyn", "", function (p) {
            p.setParams("sysNo", sysNo);
            p.setParams("r", Math.random());
        }, function (data) {
            UI.Alert({ content: data.Message });

            //if (data.Status)
            doSearch($("#pageIndex").val());
        });
    }

    function InvalidLiJia(sysNo) {

        UI.DialogBox({
            width: 300,
            height: 120,
            title: sysNo+"作废原因",
            content: '<textarea id="txInvalidRLiJiaon" style="width: 280px; height: 100px; word-break: break-all; word-wrap: break-word;"></textarea>',
            padding: '10px',
            button: [{
                name: '保存',
                callback: function () {
                    var remarks = parent.$("#txInvalidRLiJiaon").val();
                    Ajax.get("/Sys/InvalidLiJia", "", function (p) {
                        p.setParams("sysNo", sysNo);
                        p.setParams("remarks", remarks);
                        p.setParams("r", Math.random());
                    }, function (data) {
                        UI.Alert({ content: data.Message });
                        //if (data.Status)
                        doSearch($("#pageIndex").val());
                    });
                }
            }, { name: '取消' }
            ]
                });
    }
    function hideMsg() {
        $("#divMsg").css("display", "none");
    }
    //显示
    function showMsg(obj, content) {
        if (content != null && content != "") {
            $("#divMsg").html(content);
            $("#divMsg").css("display", "block");
            var offset = $(obj).position();
            $("#divMsg").css("top", offset.top - 10);
            $("#divMsg").css("left", offset.left + 40);
        }
    }
    $('#btnExport').click(function () {
        var form = $("#form1");
        form.attr('action', '@Url.Action("ExportLiJiaSyncLog", "Sys")');
        form.attr('method', 'post');
        form.submit();
        return false;
    });
    function selectWharehouse() {
        DAO.SelectWhareHouseDialog({
            chkStyle: 'checkbox',
            isAllWh: true,
            callBack: function (list) {
                if (list) {
                    var ids = [];
                    var names = [];
                    for (var i = 0; i < list.length; i++) {
                        var data = list[i];
                        if (data) {
                            ids.push(data.id);
                            names.push(data.name);
                        }
                    }
                    if (ids.length > 0) {
                        $('#warehouse_sysno').val(names.join());
                        $('#WarehouseSysNo').val(ids.join());
                    }
                }
            }
        });
    }
</script>
