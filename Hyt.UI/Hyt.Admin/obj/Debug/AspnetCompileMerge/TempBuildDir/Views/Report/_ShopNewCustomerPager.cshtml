@using Hyt.Infrastructure.Pager
@model PagedList<Hyt.Model.RP_绩效_门店新增会员>
<div class="boxs_listtabel">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone">
        <thead>
            <tr>
                <th width="70">门店编号</th>
                <th class="align_l p10_l">门店名称</th>
                <th width="90">新增会员总数</th>
                <th width="180">本月消费金额满30的会员数</th>
                <th width="90">新增会员销售</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                var mode = Model.TData as List<Hyt.Model.RP_绩效_门店新增会员>;
                if (mode != null && mode.Count > 0)
                {
                    foreach (var item in (List<Hyt.Model.RP_绩效_门店新增会员>)Model.TData)
                    {
                        if (i % 2 == 0)
                        {
                            @Html.Raw("<tr>")
                        }else{
                            @Html.Raw("<tr class='stag_color'>")
                        }
                        <td>@item.门店编号</td>
                        <td  class="align_l p10_lr"><span class="blue"><a href="javascript:getMore(@item.门店编号)">@item.门店名称</a></span></td>
                        <td>@item.新增会员总数</td>
                        <td>@item.消费金额满30的会员数</td>
                        <td class="red align_r p10_lr">@Html.Raw(Hyt.Util.FormatUtil.FormatCurrency(item.新增会员销售,0))</td>
                        @Html.Raw("</tr>")
                        i++;
                    }
                }
                else
                {
                    <tr><td colspan="5" class="align_l p10_l bgr_eb">暂无数据</td></tr>
                }
                
            }
        </tbody>
    </table>
</div>

@{Html.RenderPartial("_UrlPaging", Model); }