@model IList<Hyt.Model.Transfer.CBRptLgExpressInfo>

<table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone" id="tableResult">
    <thead>
        <tr>
            <th>统计日期</th>
            <th width="120">成功单量</th>
            <th width="120">失败单量</th>
            <th width="120">总单量</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="align_l p10_l bgr_eb">暂无数据。</td>
                </tr>
            }
            var i = 0;
            foreach (var item in Model)
            {
                var url = "/Report/LgExpressDetail?Month=" + item.统计日期.Trim();
                var succUrl = "/Report/LgExpressDetail?Month=" + item.统计日期.Trim() + "&DataType=1";
                var failUrl = "/Report/LgExpressDetail?Month=" + item.统计日期.Trim() + "&DataType=2";
                if (i % 2 == 0)
                {
                    @Html.Raw("<tr>")
                }
                else
                {
                    @Html.Raw("<tr class='stag_color'>")
                }

            <td class="blue align_l p10_l"><a href="javascript:void()" onclick='UI.OpenCreatTab("快递100统计明细", "@url");'>@item.统计日期</a></td>
            <td class="blue align_l p10_l"><a href="javascript:void()" onclick='UI.OpenCreatTab("快递100统计明细", "@succUrl");'>@item.成功单量</a></td>
            <td class="blue align_l p10_l"><a href="javascript:void()" onclick='UI.OpenCreatTab("快递100统计明细", "@failUrl");'>@item.失败单量</a></td>
            <td>@item.总单量</td>
            @Html.Raw("</tr>")
                i++;
            }
        }
        </tbody>
    </table>
