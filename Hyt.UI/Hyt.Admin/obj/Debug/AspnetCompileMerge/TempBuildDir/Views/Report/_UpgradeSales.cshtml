@model Hyt.Infrastructure.Pager.PagedList<Hyt.Model.Transfer.CBRptUpgradeSales>

<div class="boxs_listtabel">

    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone" id="tableResult">
        <thead>
            <tr>
                <th width="220" rowspan="2">分销商</th>
                <th width="130" rowspan="2">商城类型</th>
                <th rowspan="2">店铺名称</th>
                <th colspan="2" style="border-bottom: 0 solid #d3d3d3">升舱金额</th>
                <th colspan="2" style="border-bottom: 0 solid #d3d3d3">升舱销量</th>
            </tr>
            <tr>
                <th width="120">百城当日达</th>
                <th width="120">第三方</th>
                <th width="120">百城当日达</th>
                <th width="120">第三方</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (!Model.TData.Any())
                {
                    <tr>
                        <td colspan="15" class="align_l p10_l bgr_eb">暂无数据。</td>
                    </tr>
                }
                var i = 0;
                foreach (var item in (List<Hyt.Model.Transfer.CBRptUpgradeSales>)Model.TData)
                {

                    if (i % 2 == 0)
                    {
                        @Html.Raw("<tr>")
                    }
                    else
                    {
                        @Html.Raw("<tr class='stag_color'>")
                    }
                <td class="align_l"><span class="p10_lr">@item.DealerName</span></td>
                <td class="align_l"><span class="p10_lr">@item.MallName</span></td>
                <td class="align_l"><span class="p10_lr">@item.ShopName</span></td>
                <td class="align_r"><span class="p10_lr red">@MvcHtmlString.Create(Hyt.Util.FormatUtil.FormatCurrency(item.BcdSum, 2))</span></td>
                <td class="align_r"><span class="p10_lr red">@MvcHtmlString.Create(Hyt.Util.FormatUtil.FormatCurrency(item.DsfSum, 2))</span></td>
                <td class="align_r"><span class="p10_lr">@item.BcdCount</span></td>
                <td class="align_r"><span class="p10_lr">@item.DsfCount</span></td>
                @Html.Raw("</tr>")
                    i++;
                }
            }
            </tbody>
        </table>
    </div>

    @{Html.RenderPartial("_UrlPaging", Model); }