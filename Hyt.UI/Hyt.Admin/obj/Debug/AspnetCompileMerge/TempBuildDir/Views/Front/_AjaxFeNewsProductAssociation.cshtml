@using Hyt.Util;
@using Hyt.Model
@using Hyt.Infrastructure.Pager;
@model IList<CBFeNewsProductAssociation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="paging">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
              <th style="text-align: left; text-indent: 10px;">后台显示名称</th>
              <th width="59">排序号</th>
              <th width="148">操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count>0)
                {
                    var row = 1;
                    string cs = string.Empty;
                    foreach (var item in Model)
                    {
                        cs = row % 2 == 0 ? "stag_color" : string.Empty;
                        <tr  class="@cs">
                            <td style="text-align: left; text-indent: 10px;">@item.EasName</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <button onclick="doRemove(@item.SysNo)" type="button" class="btn btn_ht26 btn_red m10_r" title="删除"><span class="icon_trash icon_white"></span><span class="m5_l">删除</span></button>
                                <button onclick="doEdit(@item.SysNo)" type="button" class="btn btn_ht26 btn_blue" title="修改"><span class="icon_pencil icon_white"></span><span class="m5_l">修改</span></button>
                            </td>
                        </tr>
                        row++;
                    }
                }
                else
                {
                    <tr>
                        <td class="align_l p10_l bgr_eb" colspan="3">暂无数据</td>
                    </tr>
                }
        }
        </tbody>
    </table>
</div>


