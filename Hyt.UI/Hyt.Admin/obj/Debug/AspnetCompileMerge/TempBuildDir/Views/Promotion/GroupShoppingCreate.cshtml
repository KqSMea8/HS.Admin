    function commonSave(url) {
        if (!setting.form()) {
            return false;
        }
        var products = getProductData();
        if (products.length == 0) {
            Utils.alert("请选择团购商品");
            return false;
        }
        var selectedArea = getAreaData();
        if (selectedArea.length == 0 && $("#SupportAreaType").val() == '@Convert.ToInt32(GroupShoppingStatus.团购支持区域类型.指定区域)') {
            Utils.alert("请选择团购支持区域");
            return false;
        }
        if (DescriptionEditor.text() == "") {
            Utils.alert("请录入团购描述");
            return false;
        }
        Ajax.postJosn(url, "save", function (p) {
            p.setParams("gsSupportAreaList", selectedArea);
            p.setParams("gsGroupShoppingItemList", products);
            p.setParams("Description", DescriptionEditor.html());
        }, function (ret) {
            if (ret.Status) {
                UI.CloseTab(null, curl,null,true);
                Utils.alert("提交成功！", null, "succeed");
            } else {
                Utils.alert(ret.Message);
            }
        });
    }
