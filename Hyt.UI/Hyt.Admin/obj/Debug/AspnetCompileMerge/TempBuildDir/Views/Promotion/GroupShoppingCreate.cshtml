<script type="text/javascript">
    var curl = '/Promotion/GroupShoppings/';
    var DescriptionEditor;
    $(function () {
        UI.Tab({ tabNavBox: '#tabboxs', tabNavObj: '.tabNav2', tabContentObj: ".boxs_con_c1", tabContent: ".list2" });
        LoadTree();
        LoadRule();
        DescriptionEditor = UI.Editor("#Description", {});
        $("#SupportAreaType").change(function () {
            if ($(this).val() == '@Convert.ToInt32(GroupShoppingStatus.团购支持区域类型.指定区域)') {
                $("#PayArea").show();
            } else {
                $("#PayArea").hide();
            }
        });
        $("#TotalPrice,#GroupPrice").change(function () {
            calDiscount();
        });
        $("#form").ajaxLoadingMask(true);
        //取消审核团购
        $("#calcelAuditGroup").click(function () {
            UI.Confirm({
                content: '确定要取消团购审核吗？',
                ok: function () {
                    Ajax.postJosn("/Promotion/CalcelAuditGroup", "", function (p) {
                        p.setParams("SysNo", $("#SysNo").val());
                    }, function (ret) {
                        if (ret.Status) {
                            UI.CloseTab(null, curl,null,true);
                            Utils.alert("提交成功！", null, "succeed");
                        } else {
                            Utils.alert(ret.Message);
                        }
                    });
                }
            });
            return false;
        });
        
    });
    //计算折扣
    function calDiscount(parameters) {
        if ($("#GroupPrice").val().toDecimal() >= 0 && $("#TotalPrice").val().toDecimal() > 0) {
            var discount = $("#GroupPrice").val().toDecimal() / $("#TotalPrice").val().toDecimal();
            $("#Discount").val(discount.toFixed(2));
        }
    }
    //订购商品列表数量改变事件,type=1表示退货
    function quantityChange(input) {
        var total = 0;
        var originalTotal = 0;
        $("#product_list tr").each(function () {
            var tr = $(this);
            total += Number(tr.find(".GroupShoppingPrice").val()) || 0;
            originalTotal += Number(tr.find(".OriginalPrice").text().toDecimal()) || 0;

        });
        $("#GroupPrice").val(total);
        $("#TotalPrice").val(originalTotal);
        calDiscount();
    }
    //加载菜单
    var zTreeObj;
    function LoadTree() {
        var ztreeSetting = {
            data: {
                simpleData: {
                    enable: true
                }
            },
            check: {
                enable: true,
                chkboxType: { "Y": "ps", "N": "ps" }
            }
        };
        $.ajax({
            url: '/Promotion/GetAreaTreeByGroupShoppingSysNo?id=' + $("#SysNo").val(),
            success: function (response) {
                if (response != null) {
                    zTreeObj = $.fn.zTree.init($("#treeArea"), ztreeSetting, response);
                    //默认为收起所以节点
                    zTreeObj.expandAll(false);
                }
            }
        });
    }
    //挑选商品
    function selectProducts(warehouseSysNo, dealerSysNo) {
        DAO.SelectProduct({
            associationAttr: {
                warehouseSysNo: warehouseSysNo, dealerSysNo: dealerSysNo
            },
            onselect: function (a) {
                AddOrderItem(a);
                quantityChange($(this));
                $(".GroupShoppingPrice").change(function () {
                    quantityChange($(this));
                });
            }
        });

    }
    //添加商品列表
    function AddOrderItem(rows) {
        var content = '';
        var i = $("#product_list").find("tr").length;
        var noData = false; //是否有数据
        $.each(rows, function (idx, item) {
            var exist = false;  //该商品是否已添加
            $("#product_list").find("tr").each(function (i) {
                if ($(this).find("td").eq(5).html()) {
                    var productsysno = $(this).find("td").eq(5).html();
                    if (productsysno == item.pid) {
                        exist = true;
                    }
                } else {
                    noData = true;
                }
            });
            if (!exist) {
                var price = Number(item.baseprice);
                content += '<tr id=""><td>' + item.erp + '</td><td>' + item.name + '</td>' +
                    '<td class="red p10_r OriginalPrice" align="right">' + price.toPrice('&yen;') + '</td><td><input type="text" class="wd60 number_input GroupShoppingPrice"  name="GroupShoppingPrice" maxlength="10" value="' + price + '"/></td>' +
                    ' <td class="border_rnone"><button title="删除" class="btn btn_ht26" type="button" onclick="DeleteOrderItem(this)"><span class="icon_trash"></span><span class="m5_l">删除</span></button></td><td style="display:none">' + item.pid + '</td></tr>';
            }
        });
