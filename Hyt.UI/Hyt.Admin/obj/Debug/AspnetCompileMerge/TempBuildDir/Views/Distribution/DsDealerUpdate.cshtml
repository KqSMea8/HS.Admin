        //省市区三级联动
        Area($("#CountrySysNo"), $("#ProvinceSysNo"), $("#CitySysNo"), $("#AreaSysNo"), {
            a: '@Model.AreaSysNo',
            callback: function (type) {
            }
        });
        //设置选择项
        window.onload = function () {
            $("#LevelSysNo").find("option[value=@Model.LevelSysNo]").attr("selected", "true");
            $("#status").find("option[value=@Model.Status]").attr("selected", "true");
        };


        //验证
        $().ready(function () {
            $("#form1").validate({
                rules: {
                    AgentSysNo: { required: true, },
                    // 选择框
                    LevelSysNo: {
                        required: true,
                    },
                    status: {
                        required: true,
                    },
                    //文本
                    Contact: {
                        maxlength: 20,
                    },
                    EmailAddress: {
                        email: true,
                    },
                    PhoneNumber: {
                        maxlength: 20,
                    },
                    MobilePhoneNumber: {
                        number: true,
                        maxlength: 11,
                    },
                    ProvinceSysNo: { min: 1, },
                    CitySysNo: { min: 1, },
                    AreaSysNo: { min: 1, },
                    DealerName: {
                        rangelength: [1, 50],
                        required: true,
                        remote: {
                            url: '@Url.Action("IsCanAddDsDealerName")',     //后台处理程序
                            type: "post",               //数据发送方式
                            dataType: "json",           //接受数据格式
                            data: {
                                //要传递的数据
                                dealerName: $.trim($("#dealerName").val()),
                                sysNo: '@Model.SysNo',
                            },
                            dataFilter: function (data, type) {
                                var rdata = eval('(' + data + ')');
                                $('#fordealerName').text(rdata.Message);                                
                                return rdata.Status.toString(); //是否通过验证关键点
