                                appID: $("#appID").val(),
                                sysNo: '@Model.SysNo',
                            },
                            dataFilter: function (data, type) {
                                var rdata = eval('(' + data + ')');
                                $('#forAppID').text(rdata.Message);
                                return rdata.Status.toString();
                            }
                        }
                    },
                    AppSecret: {
                        //required: true,
                        remote: {
                            url: '@Url.Action("IsCanAddAppSecret")',     //后台处理程序
                            type: "post",               //数据发送方式
                            dataType: "json",           //接受数据格式   
                            data: {
                                //要传递的数据
                                appSecret: $("#appSecret").val(),
                                sysNo: '@Model.SysNo',
                            },
                            dataFilter: function (data, type) {
                                var rdata = eval('(' + data + ')');
                                $('#forAppSecret').text(rdata.Message);
                                return rdata.Status.toString();
                            }
                        }
                    },
