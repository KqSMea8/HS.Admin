                            dataType: "json",           //接受数据格式   
                            data: {
                                //要传递的数据
                                account: $("#Account").val(),
                                sysNo: '@Model.SysNo',
                            },
                            dataFilter: function (data, type) {
                                var rdata = eval('(' + data + ')');
                                $('#forAccount').text(rdata.Message);
                                if (rdata.Status)//赋予userSysNo
                                    $('#UserSysNo').val(rdata.StatusCode);
                                return rdata.Status.toString();
                            }
                        }
                    },
                    ImageUrl: {
                        //required: true,
                        rangelength: [1, 200]
                    },
                    IcoUrl: {
                        //required: true,
                        rangelength: [1, 200]
                    },
                    AppID: {
                        //required: true,
                        remote: {
                            url: '@Url.Action("IsCanAddAppID")',     //后台处理程序
                            type: "post",               //数据发送方式
                            dataType: "json",           //接受数据格式   
                            data: {
