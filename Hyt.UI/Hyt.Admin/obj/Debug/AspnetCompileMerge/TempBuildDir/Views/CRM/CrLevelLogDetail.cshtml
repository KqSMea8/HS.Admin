@using Hyt.Model.WorkflowStatus
@using Hyt.Util
@model Hyt.Model.Transfer.CBCrLevelLog
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "等级详情";
}
<form id="form" name="form" action="">
<body class="bodynone">
<div class="caseout">
<div class="boxs_detail_dispay">
  <div class="tit_con">
          <input type="hidden" id="hidSysNo" name="hidSysNo" value="Model.SysNo"/>
          <table width="100%" cellspacing="0" cellpadding="0" border="0" >
              <tbody>
              <tr>
               <td width="20%"  class="nameright border_rnone">会员帐号:</td>
               <td width="30%" class="border_right" colspan="3">@Model.UserName</td>
              </tr>
              <tr>
               <td width="20%"  class="nameright border_rnone">原等级:</td>
               <td width="30%" class="border_right">@Model.oldLevelName</td>
               <td width="20%"  class="nameright border_rnone">新等级:</td>
               <td width="30%">@Model.NewLevelName</td>
              </tr>
              <tr>
               <td width="20%"  class="nameright border_rnone">变更类型:</td>
               <td width="30%" class="border_right" colspan="3">@Hyt.Util.EnumUtil.GetDescription(typeof(Hyt.Model.WorkflowStatus.CustomerStatus.等级日志变更类型), Model.ChangeType)</td>
              </tr>
              <tr>
               <td width="20%"  class="nameright border_rnone">变更人:</td>
               <td width="30%" class="border_right">@Model.UserName</td>
               <td width="20%"  class="nameright border_rnone">变更时间:</td>
               <td width="30%">@Model.ChangeDate.ToString("yyyy-MM-dd HH:ss")</td>
              </tr>
              <tr>
               <td width="20%"  class="nameright border_rnone">变更描述:</td>
               <td width="30%" class="border_right" colspan="3">
                <textarea id="answer" class="input_xlarge" rows="2" name="answer" cols="20" style="width: 320px; height: 50px;">@Model.ChangeDescription</textarea>
               </td>
              </tr>
             </tbody>
           </table>  
   </div>
  </div>  
</div>
</body>
</form>