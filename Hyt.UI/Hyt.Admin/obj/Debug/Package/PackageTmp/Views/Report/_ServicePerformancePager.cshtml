@using Hyt.Infrastructure.Pager
@model PagedList<Hyt.Model.RP_绩效_客服>
<div class="boxs_listtabel">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone">
        <thead>
            <tr>
                <th width="100">客服编号</th>
                <th class="align_l p10_l">客服姓名</th>
                <th width="80">单量</th>
                <th width="140">订单金额</th>
                <th width="80">新增会员</th>
                @* <th width="70">统计日期</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                var mode = Model.TData as List<Hyt.Model.RP_绩效_客服>;
                if (mode != null && mode.Count > 0)
                {
                    foreach (var item in (List<Hyt.Model.RP_绩效_客服>)Model.TData)
                    {
                        if (i % 2 == 0)
                        {
                            @Html.Raw("<tr>")
                        }else{
                            @Html.Raw("<tr class='stag_color'>")
                        }
                        <td>@item.客服编号</td>
                        <td  class="align_l p10_lr">@item.客服名</td>
                        <td>@item.单量</td>
                        <td class="red align_r p10_lr">@Html.Raw(Hyt.Util.FormatUtil.FormatCurrency(item.订单金额,0))</td>
                        <td>@item.新增会员</td>@*
                        <td>@item.统计日期</td>*@
                        @Html.Raw("</tr>")
                        i++;
                    }
                }
                else
                {
                    <tr><td colspan="5" class="align_l p10_l bgr_eb">暂无数据</td></tr>
                }
                
            }
        </tbody>
    </table>
</div>

@{Html.RenderPartial("_UrlPaging", Model); }