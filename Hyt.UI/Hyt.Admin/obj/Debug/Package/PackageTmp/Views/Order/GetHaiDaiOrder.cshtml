            UI.Alert({
                content: "请选择类型"
            });
            return;
        }
        if ($("#shop").val() == "0") {
            UI.Alert({
                content: "请选择商城"
            });
            return;
        }
        if ($("#Status").attr('checked')) {
            if ($("#Orders").val() == "") {
                UI.Alert({
                    content: "请输入订单id"
                });
                return;
            }
        } else {
            //ischeck = false;
            // alert(ischeck);
        }
       
        var arr = new Array();
        //$("input[name='inputNum']").each(function (i, o) {
