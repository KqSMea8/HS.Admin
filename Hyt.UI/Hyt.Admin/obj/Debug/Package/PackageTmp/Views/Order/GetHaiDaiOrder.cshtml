        //    };
        //    arr.push(item);
        //});
        //if (arr.length < 1) {
        //    UI.Alert({
        //        content: ""
        //    });
        //    return;
        //}
        var ooo = $("#Orders").val();
        var orders = delfh(ooo).split(',');
        var main = {
            Type: $("#shoptype").val(),
            SysNo: $("#shop").val(),
            StartDate: $("#StartTime").val(),
            EndDate: $("#EndTime").val(),
            OrderList: JSON.stringify(orders),
