            // LODOP.ADD_PRINT_HTM(20, "5%", "90%", 60, strStyle + document.getElementById("divmain").innerHTML);//头
            //// LODOP.SET_PRINT_STYLEA(0, "ItemType", 1);//页眉页脚
            //// LODOP.SET_PRINT_STYLEA(0, "LinkedItem", 1);

