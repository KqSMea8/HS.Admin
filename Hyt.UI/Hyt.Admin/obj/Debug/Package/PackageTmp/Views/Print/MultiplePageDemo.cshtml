        LODOP.ADD_PRINT_SETUP_BKIMG("<img border='0' src=''>");
        LODOP.SET_SHOW_MODE("BKIMG_LEFT", 1);
        LODOP.SET_SHOW_MODE("BKIMG_IN_PREVIEW", true);
        LODOP.SET_PRINT_STYLE("FontSize", 12);
    }
</script>

