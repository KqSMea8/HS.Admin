@using Hyt.Infrastructure.Pager
@using Hyt.Model
@using Hyt.Util
@model PagedList<PdAttribute>

<!--表格列开始-->
<div class="boxs_listtabel">
    <div class="table-head">
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_rnone">
            <thead>
                <tr class="even_color">
                    <th width="180">属性名称（前台）</th>
                    <th>属性名称（后台）</th>
                    <th width="80">关联属性</th>
                    <th width="80">属性类型</th>
                    <th width="80">搜索条件</th>
                    <th width="100">操作</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="table-body">
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="border_bnone border_rnone">
            <tbody>

                @{
                    if (Model.TotalItemCount > 0)
                    {
                        var changeRow = true;
                        foreach (var item in Model.TData)
                        {
                            <tr class="@(changeRow?"odd_color":"even_color")">
                                <td width="180" style="text-align: left; text-indent: 10px;">@item.AttributeName</td>
                                <td style="text-align: left; text-indent: 10px;">@item.BackEndName</td>
                                <td width="80">是</td>
                                <td width="80">是</td>
                                <td width="80">是</td>
                                <td width="100">
                                    <button class="btn btn_ht26 m5_r" type="button"><span class="icon_pencil"></span><span>选择</span></button>
                                </td>
                            </tr>
                            changeRow = !changeRow;
                        }
                    }
                    else
                    {
                        <tr class="odd_color">
                            <td class="align_l p10_l bgr_eb" colspan="6">暂无数据</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<!--表格列结束-->
@{Html.RenderPartial("_UrlPaging", Model); }