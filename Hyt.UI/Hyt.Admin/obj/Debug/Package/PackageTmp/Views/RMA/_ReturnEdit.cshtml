<script type="text/javascript">

    //表格最左边的checkbox单击事件
    function chkStockOutItemSysNoClick(chk) {
        var tr = chk.closest("tr");
        var returnQuantity = tr.find(".ReturnQuantity");
        var refundAmount = tr.find(".RefundAmount");

        returnQuantity.val(0);
        refundAmount.val(0);
        if (chk.attr("checked") == "checked") {
            var productQuantityAble = Number(tr.find(".ProductQuantityAble").text()) || 0;
            if (productQuantityAble > 0)
                returnQuantity.val(1);
        }
        quantityChangeCal();
    }

    //选中调整计算
    function checkChangeCal(items) {
        if (items.length < 1) {
            clearAmount();//清除界面数据为0
            return;
        }
        Ajax.postJosn("/RMA/CalculateRmaAmount", "", function (p) {
            p.setParams("orderSysNo", "@Model.OrderSysNo");
            p.setParams("stockOutItemRmaQuantity", items);
        }, function (res) {
            if (res.StatusCode == 0) {
                var ret = res.Data;
                //接收计算之后的退款金额，并更新到界面
                $.each(ret.StockOutItemAmount, function (i, item) {
                        var oldvalue = $("#txtRefundAmount" + item.Key);
                        var newvalue = item.Value.toFixed(2).toString();
                        if (newvalue != oldvalue) {
                            $("#txtRefundAmount" + item.Key).val(newvalue);
                            calculatePriceChange();//重新汇总
                        }
                });

            } else {
                Utils.alert(res.Message);
            }
        });
    }

    //退货商品数量改变事件 调用后台计算方法，更新页面
    function quantityChangeCal() {
        $(".CustomPrice").removeAttr("checked"); //每次操作都会清除自定义价格

        var items = getStockOutItemRmaQuantity();
        if (items.length < 1) {
            clearAmount();//清除界面数据为0
            return;
        }

        Ajax.postJosn("/RMA/CalculateRmaAmount", "", function (p) {
            p.setParams("orderSysNo", "@Model.OrderSysNo");
            p.setParams("stockOutItemRmaQuantity", items);
        }, function (res) {
            if (res.StatusCode == 0) {
                var ret = res.Data;
                //接收计算之后的退款金额，并更新到界面
                var sum = 0;
                $.each(ret.StockOutItemAmount, function (i, item) {
                    $("#txtRefundAmount" + item.Key).val(item.Value.toFixed(2));
                    sum += item.Value;
                });
                setAmount(ret);
                $("#txtRefundProductAmount").val(sum.toFixed(2));
                $("#tdRefundTotalAmount").text(sum.toFixed(2));
                customerPriceChange();

            } else {
                Utils.alert(res.Message);
            }
        });
    }

    //获得 当前退货 "出库单明细编号"和"数量"
    function getStockOutItemRmaQuantity() {
        var items = [];
        $(".StockOutItemSysNo:checked").each(function () {
            var tr = $(this).closest("tr");
            items.push({
                StockOutItemSysNo: tr.find(".StockOutItemSysNo").val(),
                RmaQuantity: tr.find(".ReturnQuantity").val()
            });
        });
        return items;
    }

    //重新计算发票以及积分信息
    function calculatePriceChange() {
        var sum = 0;
        $(".RefundAmount").each(function () {
            sum += Number($(this).val());
        });
        Ajax.postJosn("/RMA/CalculateTotalAmount", "", function (p) {
            p.setParams("orderSysNo", "@Model.OrderSysNo");
            p.setParams("refundAmount", sum.toFixed(2));
        }, function (res) {
            if (res.StatusCode == 0) {
                var ret = res.Data;
                $("#txtRefundProductAmount").val(sum.toFixed(2));
                $("#tdRefundTotalAmount").text(sum.toFixed(2));
                //$("#tdCouponAmount").text(ret.CouponAmount);
                $("#tdRefundPoint").text(ret.RefundPoint);
                $("#tdRefundCoin").text(ret.RefundCoin);
                $("#tdRedeemAmount").text(ret.RedeemAmount.toFixed(2));

                if (ret.ShowInvoiceExpire) {
                    $("#txtDeductedInvoiceAmount").val(ret.DeductedInvoiceAmount.toFixed(2));
                    $("#spanInvoiceExpire").removeClass("hide");
                    $("#hidDeductedInvoiceAmount").val(ret.DeductedInvoiceAmount.toFixed(2));
                }
                else {
                    $("#spanInvoiceExpire").addClass("hide");
                    deductedInvoiceAmount(ret.DeductedInvoiceAmount.toFixed(2));
                }
                customerPriceChange();
            }
        });
    }
    //价格关系
    function customerPriceChange() {
        var sum = 0;
        $(".RefundAmount").each(function () {
            sum += Number($(this).val());
        });
        $("#txtRefundProductAmount").val(sum.toFixed(2));
        var invoiceAmount = Number($("#txtDeductedInvoiceAmount").val()) || 0;
        var redeemAmount = Number($("#tdRedeemAmount").text()) || 0;
        var refundCoin = Number($("#tdRefundCoin").text()) || 0;
        $("#tdRefundTotalAmount").text((sum - invoiceAmount - refundCoin - redeemAmount).toFixed(2));

    }

    //清空计算金额
    function clearAmount() {
        $("#tdOrginAmount").text(0);
        $("#tdOrginCoin").text(0);
        $("#tdOrginPoint").text(0);
        $("#tdCouponAmount").text(0);
        $("#txtRefundProductAmount").val(0);

        $("#tdRefundCoin").text(0);
        $("#tdRefundPoint").text(0);
        $("#tdRedeemAmount").text(0);
        $("#tdRefundTotalAmount").text(0);
