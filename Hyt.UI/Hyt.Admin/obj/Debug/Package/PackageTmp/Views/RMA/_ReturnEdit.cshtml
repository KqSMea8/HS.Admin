    //页面校验退货商品数据
    function checkForm(productJson) {
        var res = {};
        res["satus"] = 0;
        if (productJson.length == 0 || productJson[0].ReturnWhStockOutItemEx.length == 0) {
            res["satus"] = -1;
            res["message"] = "请先选择退货商品及数量";
        } else {
            $.each(productJson, function (idx, obj) {
                $.each(obj.ReturnWhStockOutItemEx, function (i, item) {
                    if (item.RmaQuantity == 0 && res["satus"] != -1) {
                        res["satus"] = -1;
                        res["message"] = "退货数量不能为零";
                    }
                    if (item.RmaReason == 0 && res["satus"] != -1) {
                        res["satus"] = -1;
                        res["message"] = "退货原因不能为空";
                    }
                });
            });
        }
        return res;
    }
    //保存退款单
    function saveReturn(postUrl, locationUrl, isAudit) {
        var productData = getProductData(1);
        var res = checkForm(productData);
        if (res.satus == -1) {
            Utils.alert(res.message);
            return;
        }
        validate();
        if (!setting.form()) {
            return;
        }
        var refundNum = parseFloat($("#txtRefundProductAmount").val());
        var fInvoiceAmount = $("#txtDeductedInvoiceAmount");//发票扣款
        if (fInvoiceAmount != null) {
            refundNum = refundNum - parseFloat(fInvoiceAmount.val());
        }
        //退款为负数
        if (refundNum < 0) {
            Utils.alert("实退总金额不能为负数");
            return;
        }
        if (fInvoiceAmount != null && parseFloat(fInvoiceAmount.val())>0) {
            UI.Confirm({
                id: 'dialog_confirm2',
                content: '客户没有退回发票将扣除税金<span class="red">&yen;' + parseFloat(fInvoiceAmount.val()) + '</span>元，是否继续保存？',
                ok: function () {
                    SavePost(productData, postUrl, locationUrl, isAudit);
                }, width: '230px'
            });
        }else{
            SavePost(productData, postUrl, locationUrl, isAudit);
        }
    }
    function SavePost(productData, postUrl, locationUrl, isAudit) {
        Ajax.postJosn(postUrl, "Save", function (p) {
            p.setParams("SysNo", "@Model.SysNo");
            p.setParams("HandleDepartment", "@Model.HandleDepartment");
            var fInvoiceAmount = $("#txtDeductedInvoiceAmount");//发票扣款
            if (fInvoiceAmount != null) {
                p.setParams("DeductedInvoiceAmount",fInvoiceAmount.val());
            }
            else {
                p.setParams("DeductedInvoiceAmount", 0);
            }
            p.setParams("ReturnEditOutStore", productData);
            p.setParams("PickUpAddress", getPickUpShipAddress());
            p.setParams("OrginPoint", $("#tdOrginPoint").text());
            p.setParams("CouponAmount", $("#tdCouponAmount").text());
            p.setParams("OrginCoin", $("#tdOrginCoin").text());
            p.setParams("OrginAmount", $("#tdOrginAmount").text().toDecimal());
            p.setParams("CustomerSysNo", $("#hdCustomerSysNo").val());
            
            p.setParams("RedeemAmount", $("#tdRedeemAmount").text());
            p.setParams("RefundCoin", $("#tdRefundCoin").text());
            p.setParams("RefundPoint", $("#tdRefundPoint").text());
            p.setParams("RefundTotalAmount", $("#tdRefundTotalAmount").text().toDecimal());
        }, function (ret) {
            if (ret.StatusCode == 0) {
                if (isAudit) {
                    location.reload();
                } else {
                    UI.Confirm({
                        content: '成功生成退货单！点击[确定]进入该退货单详情',
                        ok: function () {
                            UI.CloseTab(null, "/rma/RMADetail/?sysNo=" + ret.Data, " 退货:" + ret.Data);
                        },
                        cancel: function () {
                            UI.CloseTab(null, locationUrl);
                        }
                    });
                }
            } else {
                Utils.alert(ret.Message);
            }
        });
    }
