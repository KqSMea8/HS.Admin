@using Hyt.BLL.Product
@model Hyt.Infrastructure.Pager.PagedList<Hyt.Model.CBWhProductLendItem>
<!--/表格列表区-->
<table id="item_list" width="100%" border="0" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th class="wd75">商品编号</th>
            <th class="align_l p10_lr">后台显示名称</th>
            <th class="wd70">借货数量</th>
            <th class="wd70">销售数量</th>
            <th class="wd70">还货数量</th>
            <th width="99">强制完结数量</th>
            <th class="wd100">信用价格</th>
            <th class="wd120">创建时间</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.TData != null && Model.TData.Count > 0)
        {
            foreach (var item in Model.TData)
            {                   
            <tr>
                <td>@item.ProductSysNo</td>
                <td class="align_l p10_lr">@PdProductBo.Instance.GetProductEasName(item.ProductSysNo)</td>
                <td>@item.LendQuantity</td>
                <td>@item.SaleQuantity</td>
                <td>@item.ReturnQuantity</td>
                <td>@item.ForceCompleteQuantity</td>
                <td class="align_r red p10_r">@item.Price.ToString("C")</td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="align_l p10_l bgr_eb">暂无数据</td>
            </tr>
        }
    </tbody>
</table>
