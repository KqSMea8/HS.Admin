        //订单详情
        function OrderBrowse(dealerSysNo) {
            UI.DialogOpen('/Distribution/OrderBrowse?sysNo=' + dealerSysNo + '&Dialog=true', { title: '升舱订单详情', width: 1250, height: 850 }, false);
        }
    </script>