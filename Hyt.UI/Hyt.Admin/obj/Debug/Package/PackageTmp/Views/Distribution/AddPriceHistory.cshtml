                    <span>请选择类别：</span>
                    <span>
                        <span>
                            <select id="lb" onchange="Searchlb()">
                                @{
                                    List<Hyt.Model.PdCategory> weightList = Hyt.BLL.Product.PdCategoryBo.Instance.GetCategoryListByParentName(0).ToList();
